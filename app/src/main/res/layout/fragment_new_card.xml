<?xml version="1.0" encoding="utf-8"?>
<com.intrafab.cartomoneya.widgets.HalfRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_card_frame">

        <com.theartofdev.edmodo.cropper.CropImageView
            android:id="@+id/ivCardImage"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <ImageView
            android:id="@+id/ivIconAddImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_add" />
    </RelativeLayout>

</com.intrafab.cartomoneya.widgets.HalfRelativeLayout>